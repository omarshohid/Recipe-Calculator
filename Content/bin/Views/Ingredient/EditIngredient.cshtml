
@{
    Layout = null;
}


<div class="row" ng-controller="IngredientController" ng-init="LoadIngredientById()" style="margin:15px;">
    <div class="col-md-12">
        <div class="col-md-6">
            <h1>Edit Ingredient</h1>
            <br />
            <form class="form-horizontal" ng-submit="" name="EditIngredientForm">
                <div class="form-group">
                    <div class="col-md-3">
                        <label for="Name">Ingredient Name</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control input-sm" data-ng-model="editIngredient.ingredient_name" name="ingredient_name" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label for="Name">Preparation Type</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control input-sm" data-ng-model="editIngredient.preparation_type" name="preparation_type" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label for="Name">Weight</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-sm" data-ng-model="editIngredient.weight" name="wdight" required />
                    </div>
                    <div class="col-md-4">
                        <select data-ng-model="editIngredient.unit" class="dropdown form-control input-sm"
                                ng-options="unit.unit_name as unit.unit_name for unit in UnitList" required>
                            <option value="">------Select---------</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9 text-center">
                        <input type="submit" class="btn btn-default" value="Update" data-ng-click="UpdateIngredient()" />
                        <input type="button" class="btn btn-default" value="Reset" data-ng-click="ReseteditIngredient()" />
                        <a href="/#IngredientList" class="btn btn-default">Nutrition List</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <h1>Nutritions List</h1>
            <br />
            <div class="form-group">
                <input type="button" class="btn btn-default" value="+Add more" data-ng-click="addNewEditChoice()" />
            </div>
            <form class="form-horizontal" ng-submit="" name="nutritionListForm" ng-init="">
                <div class="form-group" data-ng-repeat="editchoice in editchoices">
                    <div class="col-md-5">
                        <select data-ng-model="editchoice.nutrition_id" class="dropdown form-control input-sm"
                                ng-options="nutrition.id as (nutrition.nutrition_name+' ('+nutrition.unit+')') for nutrition in NutritionList" ng-change="isUsedEdit($index)" required>
                            <option value="">---------------Select---------------</option>
                        </select>
                    </div>
                    <div class="col-md-3" style="margin-left:-25px">
                        <input type="text" class="form-control input-sm" data-ng-model="editchoice.nutrition_weight" placeholder="Enter weight..." name="nutrition_weight" required />
                    </div>
                    <div class="col-md-3" style="margin-left:-25px">
                        <input type="text" class="form-control input-sm" data-ng-model="editchoice.retention_factor" placeholder="Enter RF..." name="retention_factor" required />
                    </div>
                    <div class="col-md-1">
                        <input type="button" id="remove" class="btn btn-danger"style="margin-left:-25px;" @*ng-show="$last"*@ value="Del" data-ng-click="removeEditChoice($index)" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>